<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Top Border -->
    <View
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_marginBottom="8dp"
        android:background="#002196F3" />

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- Start Camera Button -->
        <Button
            android:id="@+id/buttonStartPreview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Camera"
            android:layout_marginEnd="8dp" />

        <!-- Stop Camera Button -->
        <Button
            android:id="@+id/buttonStopPreview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stop Camera"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Checkbox to enable 224x224 resize -->

    <!-- OpenCV Camera View (unhidden for debugging) -->

    <!-- Main Image Display -->
    <CheckBox
        android:id="@+id/checkboxEnableProcessing"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="Resize to 320x320" />

    <org.opencv.android.JavaCameraView
        android:id="@+id/cameraView"
        android:layout_gravity="center_horizontal"
        android:layout_width="351dp"
        android:layout_height="328dp"
        android:rotation="90"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="395dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="#f0f0f0"
        android:contentDescription="Camera Feed"
        android:scaleType="centerCrop" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="OpenCV Camera Ready"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Bottom Border -->
    <View
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:layout_marginTop="8dp"
        android:background="#002196F3" />

</LinearLayout>